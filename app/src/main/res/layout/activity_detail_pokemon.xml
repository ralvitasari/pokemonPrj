<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPokemon">

    <TextView
        android:id="@+id/title_dtl_pokemon_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:text="@string/detailName"
        android:textColor="@color/text_gray1"
        android:textSize="@dimen/_24ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/detail_pokemon_iv"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_width="@dimen/_95sdp"
        android:layout_height="@dimen/_95sdp"
        android:src="@drawable/pokemonball"
        app:layout_constraintTop_toBottomOf="@+id/title_dtl_pokemon_tv"
        app:layout_constraintStart_toStartOf="@+id/title_dtl_pokemon_tv"
        app:layout_constraintEnd_toEndOf="@+id/title_dtl_pokemon_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"
        app:civ_circle_background_color="@color/white" />

    <TextView
        android:id="@+id/title_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24ssp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/ability"
        android:textColor="@color/gray_2"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toEndOf="@id/detail_pokemon_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_pokemon_iv" />

    <TextView
        android:id="@+id/value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24ssp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/value_ability"
        android:textColor="@color/gray_2"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toEndOf="@id/detail_pokemon_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_value_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>